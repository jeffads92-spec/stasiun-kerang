# Stasiun Kerang - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="Stasiun Kerang"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_DATABASE=railway
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# Database Connection Settings
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Timezone
TIMEZONE=Asia/Jakarta

# Restaurant Settings
RESTAURANT_NAME="Stasiun Kerang"
RESTAURANT_EMAIL=info@stasiun-kerang.com
RESTAURANT_PHONE="+62 21 1234567"
RESTAURANT_ADDRESS="Jl. Contoh No. 123, Jakarta"

# Tax & Service Charge
TAX_RATE=0.10
SERVICE_CHARGE_RATE=0.05
TAX_INCLUDED=false

# Currency
CURRENCY_CODE=IDR
CURRENCY_SYMBOL=Rp

# Payment Methods (true/false)
PAYMENT_CASH_ENABLED=true
PAYMENT_CARD_ENABLED=true
PAYMENT_QRIS_ENABLED=true
PAYMENT_TRANSFER_ENABLED=true

# Notification Settings
NOTIF_NEW_ORDER=true
NOTIF_LOW_STOCK=true
NOTIF_SOUND_ENABLED=true

# Kitchen Display Settings
KITCHEN_AUTO_REFRESH=true
KITCHEN_REFRESH_INTERVAL=5000
KITCHEN_LATE_ORDER_THRESHOLD=30

# Order Settings
ORDER_NUMBER_PREFIX=ORD
PAYMENT_NUMBER_PREFIX=PAY

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif

# Email Settings (Optional - for future features)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@stasiun-kerang.com
MAIL_FROM_NAME="Stasiun Kerang"

# API Settings
API_RATE_LIMIT=60
API_TIMEOUT=30

# Logging
LOG_LEVEL=error
LOG_CHANNEL=file

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Development Settings (only for local development)
DEV_MODE=false
DISPLAY_ERRORS=false
ERROR_REPORTING=E_ALL
